<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="content">Title:<%= link_to micropost.title ,micropost%></span>
  <span class="content">Author:<%=  micropost.author %></span>
  <span class="content">Price:Rs.<%=  micropost.price %></span>
  <span class="content">Info:<%= micropost.content%></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    Uploaded <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
     <%= link_to "delete", micropost ,method: :delete,
                             data: { confirm: "you sure"} %>
     <% end %>                        
  </span>
</li>