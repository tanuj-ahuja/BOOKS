
<% @user_items.each do |u| %>
<div >
     <%= link_to gravatar_for(u, size: 50 ) , u %>
     <h1><%= u.name %></h1>
     <h2><%= u.email %></h2>
     <h4>You have requested for the following:</h4>
       <% @rels.each do |r| %>
       <% @micropost_items.each do |m| %>
          <% if r.seller_id==u.id && r.message_id==m.id %>

        <div>
      <%= m.content %>
        </div> 

       
         <% end %>
       <% end %> 
     <% end %>  
   

   <%= will_paginate @user_items %>
</div>
<% end %>
