<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<div>
   <%= gravatar_for @user %>
   NAME:  <%= @user.name %><br>
   COLLEGE:  <%= @user.college %><br>
   SEMISTER:  <%= @user.sem %><br>
   PHONE NO:  <%= @user.phone %><br>
</div>
</h1>
</section>
</aside>
  <div class="col-md-8">
  
    <% if @user.microposts.any? %>
      <h3>Books (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>